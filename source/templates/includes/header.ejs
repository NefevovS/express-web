<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= title %>::<%= appTitle %></title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/picnic">
    <link rel="stylesheet" href="/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<nav>
    <% if(req.user) { %>
        <a href="/" class="brand">
            <span>Список дел</span>
        </a>
    <% } %>
    <a href="/" class="brand"><span>Список дел</span></a>
    <input type="checkbox" class="show" id="bmenub">
    <label for="bmenub" class="burger pseudo button">&#9776;</label>
    <div class="menu">
        <% if(req.user){ %>
            <a href="/add/" class="button">Добавить дело</a>
            <form action="/logout" method="post" class="horizontal">
                <input type="submit" class="warning" value="Выйти">
            </form>
        <% }else { %>
            <a href="/register/" class="button">Зарегистрироваться</a>
            <a href="/login/" class="button success">Войти</a>

        <% } %>

    </div>


</nav>